<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:typeface">serif</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/bolder_text</item>
        <item name="colorControlActivated">@color/bolder_text</item>
        <item name="android:textColorHighlight">@color/bolder_text</item>
    </style>

</resources>
