<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_alert_dialog_iv_logo"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:src="@drawable/img_logo_small"
            tools:ignore="ContentDescription,ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/activity_alert_dialog_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alert_dlg_img"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:lines="1"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:text="긴급 위치 문자를 전송하였습니다."
            android:padding="25dp"
            tools:ignore="ObsoleteLayoutParam" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />

        <Button
            android:id="@+id/activity_alert_dialog_btn_confirm"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_below="@+id/alert_dlg_msg"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:onClick="onConfirm"
            android:text="확인"
            android:textColor="@color/bolder_text"
            android:textSize="18sp"
            tools:ignore="ObsoleteLayoutParam" />
    </LinearLayout>
</RelativeLayout>