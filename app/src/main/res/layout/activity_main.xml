<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_setting_img"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/img_siren"
            android:adjustViewBounds="true"
            android:layout_gravity="right"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="5">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_logo_big"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>

        </LinearLayout>



        <TextView
            android:id="@+id/main_ansim_tv"
            android:layout_weight="0.5"
            android:layout_margin="15dp"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:background="@drawable/btn_orange_big_n"
            android:text="@string/ansim_setting"
            android:textColor="@color/white"
            android:hint="@string/btn_done"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>