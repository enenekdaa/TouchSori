<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white">


    <FrameLayout
        android:id="@+id/dialog_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/dialog_tv_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:textSize="13sp"
                android:text="@string/setting_sos_insert"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/dialog_edt_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:orientation="vertical">

            <EditText
                android:id="@+id/dialog_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:layout_margin="5dp"
                android:textSize="13sp"
                android:padding="10dp"
                android:hint="이름"/>

            <EditText
                android:id="@+id/dialog_phoneNumber_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="12"
                android:layout_margin="5dp"
                android:inputType="phone"
                android:textSize="13sp"
                android:padding="10dp"
                android:hint="휴대전화"/>



        </LinearLayout>

    </FrameLayout>



    <LinearLayout

        android:id="@+id/dialog_bottomm_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_fl"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_no_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/border_gray"
            android:textColor="@color/bolder_text"
            android:text="취소"/>

        <TextView
            android:id="@+id/dialog_ok_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/border_gray"
            android:textColor="@color/bolder_text"
            android:text="저장"/>


    </LinearLayout>

</RelativeLayout>