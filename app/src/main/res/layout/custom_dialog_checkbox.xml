<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/dialog_checkbox1_rl"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/m10_cb"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음성녹음 10초"
            android:buttonTint="@color/bolder_text"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/m20_cb"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/bolder_text"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="음성녹음 20초" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_checkbox2_rl"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_checkbox1_rl"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/w1_cb"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:textSize="12sp"
            android:buttonTint="@color/bolder_text"
            android:text="위치전송 1회" />

        <CheckBox
            android:id="@+id/w5_cb"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:textSize="12sp"
            android:buttonTint="@color/bolder_text"
            android:text="위치전송 5회" />

    </LinearLayout>


    <LinearLayout

        android:id="@+id/dialog_bottomm_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_checkbox2_rl"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_no_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center"
            android:background="@drawable/border_gray"
            android:textColor="@color/bolder_text"
            android:text="취소"/>

        <TextView
            android:id="@+id/dialog_ok_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center"
            android:background="@drawable/border_gray"
            android:textColor="@color/bolder_text"
            android:text="저장"/>


    </LinearLayout>




</RelativeLayout>